---
import { getImageUrl } from '../utils'
import BaseButton from './BaseButton.astro'
---

<header id='topo' class='block'>
  <div class='fixed w-full top-0 z-20'>
    <nav
      class='grid container pt-4 grid-cols-[1fr_40px] flex-wrap gap-x-2 lg:flex lg:flex-row lg:justify-between lg:pb-4'
    >
      <a href='/#topo' class='block'>
        <picture>
          <source
            srcset={`${getImageUrl('images/logo-bellypao.h144.png', 'f_webp,h_40')} 1x, 
            ${getImageUrl('images/logo-bellypao.h144.png', 'f_webp,h_60')} 1.5x,
            ${getImageUrl('images/logo-bellypao.h144.png', 'f_webp,h_80')} 2x,
            ${getImageUrl('images/logo-bellypao.h144.png', 'f_webp,h_120')} 3x`}
            type='image/webp'
          />
          <img
            src={getImageUrl('images/logo-bellypao.h144.png', 'h_40')}
            srcset={`${getImageUrl('images/logo-bellypao.h144.png', 'h_40')} 1x, 
            ${getImageUrl('images/logo-bellypao.h144.png', 'h_60')} 1.5x,
            ${getImageUrl('images/logo-bellypao.h144.png', 'h_80')} 2x,
            ${getImageUrl('images/logo-bellypao.h144.png', 'h_120')} 3x`}
            alt='Logo Belly Pão'
            width='160'
            height='40'
            loading='lazy'
            decoding='async'
          />
        </picture>
      </a>
      <input class='hidden' type='checkbox' id='menu-opened' />
      <label id='menu-button' for='menu-opened'>
        <span class='icon'></span>
      </label>
      <ul id='menu'>
        <li>
          <a class='nav-link' href='/#diferencial'>Diferencial</a>
        </li>
        <li>
          <a class='nav-link' href='/#servicos'>Serviços</a>
        </li>
        <li>
          <a class='nav-link' href='/#produtos'>Produtos</a>
        </li>
        <li>
          <a class='nav-link' href='/#quem-somos'>Quem somos</a>
        </li>
        <li>
          <BaseButton
            href='https://wa.me/5511945488607'
            variant='primary-outline'
            icon='whatsapp'
            size='xs'
            block
            centered>Fale conosco</BaseButton
          >
        </li>
      </ul>
    </nav>
  </div>
  <div class='bg-brown-700 flex flex-col relative'>
    <picture
      class='absolute left-0 right-0 bottom-0 opacity-70 mix-blend-lighten'
    >
      <source
        srcset={`${getImageUrl('images/primeira-dobra.png', 'w_1024,f_webp')} 1x, 
        ${getImageUrl('images/primeira-dobra.png', 'w_1536,f_webp')} 1.5x,
        ${getImageUrl('images/primeira-dobra.png', 'w_2048,f_webp')} 2x,
        ${getImageUrl('images/primeira-dobra.png', 'w_3072,f_webp')} 3x`}
        type='image/webp'
        media='(min-width: 1024px)'
      />
      <source
        srcset={`${getImageUrl('images/primeira-dobra.png', 'w_1024')} 1x, 
        ${getImageUrl('images/primeira-dobra.png', 'w_1536')} 1.5x,
        ${getImageUrl('images/primeira-dobra.png', 'w_2048')} 2x,
        ${getImageUrl('images/primeira-dobra.png', 'w_3072')} 3x`}
        type='image/png'
        media='(min-width: 1024px)'
      />
      <source
        srcset={`${getImageUrl('images/primeira-dobra_mobile.png', 'w_640,f_webp')} 1x, 
      ${getImageUrl('images/primeira-dobra_mobile.png', 'w_960,f_webp')} 1.5x,
      ${getImageUrl('images/primeira-dobra_mobile.png', 'w_1280,f_webp')} 2x,
      ${getImageUrl('images/primeira-dobra_mobile.png', 'w_1600,f_webp')} 3x`}
        type='image/webp'
        media='(min-width: 640px)'
      />
      <source
        srcset={`${getImageUrl('images/primeira-dobra_mobile.png', 'w_640')} 1x, 
        ${getImageUrl('images/primeira-dobra_mobile.png', 'w_960')} 1.5x,
        ${getImageUrl('images/primeira-dobra_mobile.png', 'w_1280')} 2x,
        ${getImageUrl('images/primeira-dobra_mobile.png', 'w_1600')} 3x`}
        type='image/png'
        media='(min-width: 640px)'
      />
      <source
        srcset={`${getImageUrl('images/primeira-dobra_mobile.png', 'w_375,f_webp')} 1x, 
      ${getImageUrl('images/primeira-dobra_mobile.png', 'w_563,f_webp')} 1.5x,
      ${getImageUrl('images/primeira-dobra_mobile.png', 'w_750,f_webp')} 2x,
      ${getImageUrl('images/primeira-dobra_mobile.png', 'w_1125,f_webp')} 3x`}
        type='image/webp'
      />
      <source
        srcset={`${getImageUrl('images/primeira-dobra_mobile.png', 'w_375')} 1x, 
        ${getImageUrl('images/primeira-dobra_mobile.png', 'w_563')} 1.5x,
        ${getImageUrl('images/primeira-dobra_mobile.png', 'w_750')} 2x,
        ${getImageUrl('images/primeira-dobra_mobile.png', 'w_1125')} 3x`}
        type='image/png'
      />
      <img
        src={getImageUrl(
          'images/primeira-dobra_mobile.png',
          'w_1080,h_800,f_webp',
        )}
        alt=''
        class='w-full h-auto aspect-[1080/800] mt-auto lg:aspect-[2500/1080] object-cover'
        loading='lazy'
        decoding='async'
      />
    </picture>
    <div class='container mt-[4.5rem] relative z-[2]'>
      <slot />
    </div>
  </div>
</header>
<script>
  const fixedNavbar = document.querySelector('#topo .fixed')

  window.addEventListener('scroll', () => {
    if (window.scrollY > 0) return fixedNavbar?.classList.add('actived')
    return fixedNavbar?.classList.remove('actived')
  })

  const closeMenu = () => {
    const menuOpened = document.getElementById(
      'menu-opened',
    ) as HTMLInputElement
    menuOpened.checked = false
  }
  const menuLinks = Array.from(
    document.querySelectorAll('#menu a'),
  ) as HTMLLinkElement[]
  menuLinks.forEach((menuLink) => {
    menuLink.addEventListener('click', () => closeMenu())
  })

  // click outside
  document.addEventListener(
    'click',
    (event) => {
      const target = event.target as HTMLElement
      const menuOpened = document.getElementById(
        'menu-opened',
      ) as HTMLInputElement
      if (
        !target.closest('#menu') &&
        !target.closest('#menu-button') &&
        !target.closest('#menu-opened') &&
        menuOpened.checked
      ) {
        closeMenu()
      }
    },
    false,
  )
</script>
<style>
  #menu-button {
    @apply cursor-pointer inline-flex p-2 select-none h-10 w-10 border border-brown-800 rounded-lg items-center justify-center justify-self-end;
    @apply lg:hidden;
  }

  .icon {
    @apply bg-[#FFAA33] block h-[2px] relative transition-colors ease-out w-4;
  }

  .icon:before,
  .icon:after {
    @apply bg-[#FFAA33] block h-full w-full absolute transition-all ease-out content-[''];
  }

  .icon:before {
    @apply top-[5px];
  }

  .icon:after {
    @apply top-[-5px];
  }

  #menu {
    @apply max-h-0 transition-max-height duration-200 ease-out clear-both overflow-hidden will-change-auto col-span-2 pt-4 box-border;
    @apply lg:max-h-fit lg:flex lg:items-center lg:justify-center lg:pt-0 lg:gap-x-2;
  }

  #menu li:last-of-type {
    @apply mt-2 lg:mt-0 lg:ml-4;
  }
  #menu li:last-of-type a {
    @apply h-10;
  }

  #menu-opened:checked ~ #menu {
    @apply pb-4;
    max-height: 282px;
  }

  #menu-opened:checked ~ #menu-button .icon {
    background: transparent;
  }

  #menu-opened:checked ~ #menu-button .icon:before {
    top: 0;
    transform: rotate(-45deg);
  }

  #menu-opened:checked ~ #menu-button .icon:after {
    top: 0;
    transform: rotate(45deg);
  }

  .nav-link {
    @apply inline-flex w-full items-center px-2 h-12 text-[#FFECCC] font-semibold rounded-lg hover:bg-[#FFECCC]/10 transition-colors ease-out;
    @apply lg:w-fit lg:px-4 lg:py-3 lg:h-10;
  }

  #topo .fixed.actived {
    @apply bg-brown-700/90 backdrop-blur;
  }

  #topo .fixed:has(#menu-opened:checked) {
    @apply bg-brown-700/90 backdrop-blur rounded-b-lg;
  }
</style>
